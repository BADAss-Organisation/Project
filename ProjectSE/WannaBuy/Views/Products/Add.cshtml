@model WannaBuy.ViewModels.Application.AddApplicationViewModel
<h1>Add Application</h1>
<form method="post" asp-action="Add" class="mt-5">
      <div class="mb-3">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="Name">
    </div>
    <div>
        <label class="form-label">Price</label>
        <input type="text" class="form-control" asp-for="Price">
    </div>
     <div>
        <label class="form-label">Description</label>
        <input type="text" class="form-control" asp-for="Description">
    </div>
     <div>
        <label class="form-label">Amount</label>
        <input type="text" class="form-control" asp-for="Amount">
    </div>
    <div>
        <label class="form-label">ImageUrl</label>
        <input type="text" class="form-control" asp-for="Image">
    </div>
    <div>
        <label class="form-label">Breed</label>
        <select class="form-control" asp-for="CategoryId" asp-items="ViewBag.CategoryId"></select>
    </div>
    <button type="submit" class=btn-primary>Submit</button> 
</form>
